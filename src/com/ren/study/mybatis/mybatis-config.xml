<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 别名 -->
	<typeAliases>
		<typeAlias type="com.ren.study.mybatis.pojo.Role" alias="role"/>
		<typeAlias type="com.ren.study.mybatis.pojo.User" alias="user"/>
		<typeAlias type="com.ren.study.mybatis.Enum.SexEnum" alias="sexEnum"/>
	</typeAliases>
	<typeHandlers>
		<typeHandler jdbcType="VARCHAR" javaType="string" handler="com.ren.study.mybatis.typeHandler.MyTypeHandler"/>
		<typeHandler jdbcType="VARCHAR" javaType="sexEnum" handler="com.ren.study.mybatis.typeHandler.SexEnumTypeHandler"/>
	</typeHandlers>
	<!-- 数据库环境 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://localhost:3306/test"/>
				<property name="username" value="root"/>
				<property name="password" value="root"/>
			</dataSource>
		</environment>
	</environments>
	
	<!-- 映射文件 -->
	<mappers>
		<mapper resource="com/ren/study/mybatis/Mapper/impl/RoleMapper.xml"/>
		<mapper resource="com/ren/study/mybatis/Mapper/impl/UserMapper.xml"/>
	</mappers>
</configuration>
